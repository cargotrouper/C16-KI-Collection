  SetStdAusFeld('edULa.Artikelnr'           ,'Artikel');

  App_Main:EvtInit(aEvt);

  $clmULa.Bezeichnung.L2->wpcaption # Set.Sprache2;
  $clmULa.Bezeichnung.L3->wpcaption # Set.Sprache3;
  $clmULa.Bezeichnung.L4->wpcaption # Set.Sprache4;
  $clmULa.Bezeichnung.L5->wpcaption # Set.Sprache5;
