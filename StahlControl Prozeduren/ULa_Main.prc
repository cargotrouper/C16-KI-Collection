  vHdl # gMenu->WinSearch('Mnu.Edit');
  if (vHdl <> 0) then
    vHdl->wpDisabled # (vHdl->wpDisabled) or (Rechte[Rgt_ULa_Aendern]=n);

  vHdl # gMdi->WinSearch('Delete');
